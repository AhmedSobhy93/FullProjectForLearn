<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff6890e8"
    android:id="@+id/rl1">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Main_FirstNum_Text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="First Number"
        android:background="#ffb1a6e8" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Main_SecondNum_Text"
        android:layout_below="@+id/Main_FirstNum_Text"
        android:layout_alignLeft="@+id/Main_FirstNum_Text"
        android:layout_alignStart="@+id/Main_FirstNum_Text"
        android:layout_marginTop="46dp"
        android:hint="Second Number"
        android:background="#ffb1a6e8" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Main_SecondNum_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/Main_Sum_Button"
            android:textColor="#ffe82a61"
            android:layout_weight="1"
            android:background="#ffe8a354" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/Main_Sub_Button"
            android:textColor="#ffe85c75"
            android:layout_weight="1"
            android:background="#ffe8a354" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/Main_Multi_Button"
            android:textColor="#ffe82a61"
            android:layout_weight="1"
            android:background="#ffe8a354" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/Main_Div_Button"
            android:textColor="#ffe82a61"
            android:layout_weight="1"
            android:background="#ffe8a354" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Main_Result_TextView"
        android:hint="Result"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="119dp"
        android:textColor="#ffe86aa7"
        android:background="#ffb1a6e8" />

</RelativeLayout>
